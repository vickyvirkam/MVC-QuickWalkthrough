@model DataAccess.Models.UserDetails
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View1</title>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"
            type="text/javascript"></script> 
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <div>
        @Html.ValidationMessage("CredentialError", new { style = "color:red;" })
        @using (Html.BeginForm("Login", "Authentication", FormMethod.Post))
        {
            @Html.LabelFor(x => x.Username)
            @Html.TextBoxFor(c => c.Username)<br />
            @Html.ValidationMessageFor(x =>x.Username)<br />
            @Html.LabelFor(x => x.Password)
            @Html.TextBoxFor(c => c.Password)<br />
            @Html.ValidationMessageFor(x =>x.Password)
            <br />
            <input type="submit" id="btnsubmit" value="Login" />
        }
    </div>
</body>
</html>
